.info-panel .z-window-overlapped, .info-panel .z-window-highlighted {
	background-color: #F4F4F4 !important;
}

.info-panel .z-grid {
	border: none !important;
}

.info-panel .statusBar .z-west,
.info-panel .statusBar .z-center {
    background: #E9F0FF; /*JPIERE*/
	border: none;
	padding-top: 4px; /*JPIERE*/
	padding-left: 4px;
}

.info-panel .statusBar .z-east {
    background: #E9F0FF; /*JPIERE*/
	border: none;
	padding-top: 2px;
	padding-left: 4px;
	width:24px;
}

.info-panel .z-north-body{ /*JPIERE*/
    padding-top: 4px; 
}

.info-panel .z-center { /*JPIERE*/
    padding-top: 2px; 
}

.info-panel .z-south-title{
    padding-top: 2px; /*JPIERE*/
	bottom: 4px;
    position: relative;
}

.info-panel .z-listbox {
	width: 99% !important;
	position: relative;
	margin: auto;
}

.info-panel .z-south {
	margin-top: 2px;
	border-top: 1px solid #C5C5C5;
	background-color: #E9F0FF; /*JPIERE*/
}

.info-panel .z-south-body .z-vbox {
    height: 108px !important;/*JPIERE*/
}
.info-panel .z-window-highlighted .z-window-content {
	padding: 0px;
}

.info-product-tabbedpane {
	background-color: #FFFFFF;
}

.info-panel.z-window .z-borderlayout > div > .z-north {
	max-height: 50%;
}
.info-panel .z-listheader > .z-listheader-content {
	white-space: pre-line;
	text-overflow: ellipsis;
}
